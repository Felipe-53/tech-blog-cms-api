// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DBAuthor {
  id String @id @db.Uuid
  email String
  passwordHash String
  name String
  admin Boolean
  posts DBPost[]
}

model DBCategory {
  id String @id @db.Uuid
  name String
  posts DBCategoriesToPosts[]
}

model DBPost {
  id String @id @db.Uuid
  title String
  excerpt String
  slug String
  ogImageUrl String
  body String
  createdAt DateTime @default(now())
  updatedAt DateTime?
  authorId String @db.Uuid
  author DBAuthor @relation(fields: [authorId], references: [id])
  categories DBCategoriesToPosts[] 
}

model DBCategoriesToPosts {
  categoryId String @db.Uuid
  postId String @db.Uuid
  category DBCategory @relation(fields: [categoryId], references: [id])
  posts DBPost @relation(fields: [postId], references: [id])

  @@id([categoryId, postId])
}